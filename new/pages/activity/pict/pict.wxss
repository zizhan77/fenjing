.loadk{position:fixed;width:100%;height:100%;background:#fff;left:0;top:0;z-index:99999;}
.pintuk{position:absolute;width:613rpx;height:613rpx;left:-4rpx;bottom:0rpx;margin:auto;background:#fff;z-index:999;box-shadow: 0 0 2px 1px rgba(0,0,0,0.2);border:4rpx solid #202020;border-radius:20rpx;}
.pintu{position:absolute;width:180rpx;height:180rpx;transition:all 0.1s ease;-webkit-transition:all 0.1s ease;z-index:10;box-shadow:0 0 1px 1px rgba(0,0,0,0.1);}

