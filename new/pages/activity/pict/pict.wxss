page{background-image:url(http://resource.jiyilive.com/img2/active/back.png);background-attachment: fixed;background-size:auto 100%;}
.makepic{position:fixed;width:600rpx;height:600rpx;left:-600rpx;top:0;margin:auto;box-shadow:0 0 2px 1px rgba(0,0,0,0.1);z-index:99;background:#f0f0f0;}
