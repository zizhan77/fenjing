/* pages/movies/movies.wxss */
/* 头部框 */
.head-title{
  width: 100%;
  background: #fff;
  padding-top: 30rpx;
  /* padding-left: 20rpx; */
}
/* 电影名字 */
.head-title .titles .title{
  font-size: 40rpx;
  margin-left: 40rpx;
  margin-bottom: 20rpx;
}
/* 放映时间 */
.head-title .titles .times{
  font-size: 30rpx;
  color: #a7a7a7;
  margin-left: 40rpx;
  margin-bottom: 30rpx;
}
/* 横线 */
.head-title .line{
  width: 95%;
  height: 1rpx;
  background: #e7e7e7;
  position: absolute;
  right: 0;
}
/* 三个座位的框 */
.head-seat{
  width: 100%;  
  background: #fff;
}
.head-seat .seat{
  width: 65%;
  position: relative;
  left: 50%;
  transform: translate(-50%);
  display: flex;
  font-size: 30rpx;
}
/* 可选 */
.head-seat .seat .seat1{
  display: flex;
  margin-right: 30rpx;
  margin-top: 10rpx;
}
/* 已售 */
.head-seat .seat .seat2{
  display: flex;
  margin-right: 30rpx;
  margin-top: 10rpx;
}
/* 图片大小 */
.head-seat .seat image{
  width: 50rpx;
  height: 40rpx;
}
.head-seat .seat .seat3{
  margin-top: 10rpx;
  display: flex;
}
/* 虚线框 */
.head-seat .seat .seat3 .seat3-nice{
  width: 40rpx;
  height: 30rpx;
  border: 1px dashed #f40404;
  border-radius: 5rpx;
}
/* 最主要部分：座位分布区域 */
.seat-change{
  width: 100%;
  min-height: 300rpx;
  background: #faf8fa;
  margin-top: 40rpx;
  padding-bottom: 40rpx;
}
/* 在哪里观影 */
.seat-change .seat-change-title{
  width: 40%;
  text-align: center;
  position: relative;
  left: 50%;
  transform: translate(-50%);
  font-size: 35rpx;
  background: #e7e7e7;
}
.seat-change .seat-change1{
  width: 85%;
  margin: 40rpx auto;

}
.seat-change .seat-change1 image{
  width: 50rpx;
  height: 40rpx;
}
/* 座位推荐 */
.seat-recommend{
  width: 100%;
  height: 100rpx;
  display: flex;
  padding-top:30rpx;
  /* padding-left: 20rpx; */
}
.seat-recommend text{
  margin-left: 20rpx;
}
.seat-recommend view{
  width: 100rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  border: 1px solid #e7e7e7;
  text-align: center;
}
.seat-recommend .seat-recommend1{
  margin-right: 20rpx;
}
.seat-recommend .seat-recommend2{
  margin-right: 20rpx;
}
.seat-recommend .seat-recommend3{
  margin-right: 20rpx;
}

.seat-chooseFinish{
  width: 100%;
  min-height: 150rpx;
  font-size: 35rpx;
  background: #fff;
  z-index: 99;
  display: flex;
  padding-top:30rpx;
  padding-left: 30rpx;
}
.seat-chooseFinish view{
  width: 22%;
  min-height: 100rpx;
  border: 1px solid #e7e7e7;
  border-radius: 5rpx;
  margin-left: 10rpx;
  padding: 5rpx;
}
/* 点击购买 */
.seat-buy{
  width: 30%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 36rpx;
  background-image: url(http://image.jiyilive.com/%E7%AB%8B%E5%8D%B3%E6%8A%A2%E7%A5%A8@2x.png);
  background-size: 100%;
  background-position: center center;
  background-repeat:no-repeat;
  display: inline-block;
  margin-right: 5%;
}

.sum-price{
  display: inline-block;
  width: 65%;
  height: 100%;
  line-height: 100rpx;
  padding-left: 40rpx;
  font-size: 36rpx;
  background: #fff;
}

.bg-choosed{
  background-image: url(http://resource.jiyilive.com/img/ico/butchesed.png);
  background-size: 100%;
  background-position: center center;
}

.bg-unchoose{
  background-image: url(http://image.jiyilive.com/%E5%B7%B2%E9%80%89%E4%B8%AD%E6%97%B6%E9%97%B4@2x.png);
  background-size: 100%;
  background-position: center center;
}

