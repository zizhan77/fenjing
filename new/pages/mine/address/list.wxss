/* pages/mine/address/list.wxss */
page{
  background-color: white;
  background-image:none;
  padding:0;
}
.cu-card.case .cu-tag {
  position:absolute;
  left:0;
  top:0;
}
.btn-addAddress{
  /* background-image: url(http://image.jiyilive.com/%E6%B7%BB%E5%8A%A0%E6%94%B6%E8%B4%A7%E5%9C%B0%E5%9D%80@2x.png); */  
  background-size: 100% 100%;
  background-position: center center;
  background-repeat: no-repeat;
  color: white;
  font-size: 36rpx;
}

.title{
  font-size: 30rpx;
}

.value{
  font-size: 28rpx;
  color: rgb(51, 51, 51)
}

.footer button{
  border:1px solid #ddd;
}

.ract_but{width:690rpx;margin:7rpx auto;box-sizing:border-box;line-height:68rpx;border:2rpx solid #231916;border-radius:36rpx;background:#9fe8ff;text-align:center;position:relative;height:80rpx;}
.ract_but p{display:block;position:relative;z-index:10;color:#231916;font-size:28rpx;font-weight:bold;}
.ract_but:after{content:"";display:block;position:absolute;left:-2rpx;top:-2rpx;width:690rpx;border:2rpx solid #231916;height:70rpx;border-radius:35rpx;background:#fff388;box-sizing:border-box;}

.list_k{padding:0 30rpx;}
.list_d{width:690rpx;min-height:186rpx;color:#666;margin:41rpx 0 0;border-bottom:1rpx solid rgba(22,22,22,0.1);text-align:left;padding-bottom:20rpx;}
.list_tit{width:100%;height:32rpx;line-height:32rpx;font-size:32rpx;color:#202020;font-weight:bold;}
.list_con{width:100%;min-height:60rpx;line-height:30rpx;font-size:26rpx;margin:20rpx 0 30rpx;}
.list_butk{width:100%;display:flex;height:30rpx;line-height:30rpx;white-space:nowrap;font-size:22rpx;margin-bottom:15rpx;}
.list_default{flex:1 1 200rpx;}
.list_defte:after{content:"设为默认";}
.list_defch{color:#ff3e25;}
.list_defch:after{content:"默认地址"}
.list_edit{color:#202020;flex:0 0 100rpx;text-align:right;}
.list_edit image{width:30rpx;height:30rpx;vertical-align:-4rpx;}






