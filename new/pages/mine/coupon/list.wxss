/* pages/mine/coupon/list.wxss */
.cu-card.case .cu-tag {
  position:absolute;
  left:0;
  top:0;
  width: 100%;
  height: 100%;
  background: rgba(187, 186, 186, 0.1);
  justify-content: flex-end;
}

#to-use{
  color: white;
  background-image: url('http://yanxuan.nosdn.127.net/d6efcd4cbb0e43a9ada5beebadd33fda.png');
  background-size: 100% 100%;
  background-position: center;
  background-repeat: no-repeat;
  font-size: 22rpx;
}

.coupon{
  background-image: url('http://image.jiyilive.com/WechatIMG17.png');
  background-size: 100% 100%;
  background-position: center;
  background-repeat: no-repeat;
  overflow:hidden;
  border-radius:10rpx;
  margin:30rpx;

}
.left-price{
  color: rgb(153, 102, 204)  
}

.right-price{
  color: rgb(35, 35, 35)
}

.right-time{
  color: rgb(146, 146, 146)
}

.used{
  background-image: url(http://image.jiyilive.com/%E5%B7%B2%E4%BD%BF%E7%94%A8@2x.png);
  background-size: 100%;
  background-position: center;
  background-repeat: no-repeat;
  background-color:rgba(1,1,1,0);
  justify-content: flex-end;
}

.old{
  background-image: url(http://image.jiyilive.com/%E5%B7%B2%E8%BF%87%E6%9C%9F@2x.png);
  background-size: 100%;
  background-position: center;
  background-repeat: no-repeat;
  background-color:rgba(1,1,1,0);
}

.disable-color{
  color: rgb(153, 153, 153);
}

.nav .cu-item.cur{border-bottom:none;}
.slid{display:inline-block;height:100%;box-sizing:border-box;}
.text-purple .slid{border-bottom:2px solid #6739b6;}